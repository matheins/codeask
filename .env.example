ANTHROPIC_API_KEY=sk-ant-...
GITHUB_REPO_URL=https://github.com/owner/repo.git
GITHUB_TOKEN=              # optional, for private repos
REPO_BRANCH=main
CLONE_DIR=./repo
SLACK_BOT_TOKEN=           # xoxb-... from Slack app
SLACK_APP_TOKEN=           # xapp-... from Slack app (Socket Mode)
SYNC_INTERVAL=300          # seconds between repo syncs
API_KEY=                   # required — random secret for HTTP endpoint auth
MCP_SERVERS_CONFIG=        # optional — path to JSON file OR inline JSON for additional MCP servers (Serena is built-in)
CUSTOM_INSTRUCTIONS=       # optional — extra context appended to the agent's system prompt (e.g. "We use Stripe for billing and Attio as our CRM")
MAX_ITERATIONS=20          # max agent tool-call rounds (default 20)
ENABLE_THINKING=true       # enable extended thinking (default true)
THINKING_BUDGET=10000      # token budget for thinking (default 10000)
DATABASE_URL=              # optional — postgres://user:pass@host/db or mysql://user:pass@host/db
DB_MAX_ROWS=100            # max rows returned per query (default 100)
DB_QUERY_TIMEOUT=30        # query timeout in seconds (default 30)
